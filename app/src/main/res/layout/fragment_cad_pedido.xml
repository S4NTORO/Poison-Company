<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadPedido">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/cadastreseupedido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cadastre seu Pedido"
                android:textAlignment="center" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Produto" />

            <Spinner
                android:id="@+id/sp_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/produto"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/cor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cor" />

            <Spinner
                android:id="@+id/sp_cor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/cor" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/tamanho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tamanho" />

            <Spinner
                android:id="@+id/sp_tamanho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/tamanho" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <TextView
                android:id="@+id/quantidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantidade" />

            <EditText
                android:id="@+id/numero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="number" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <Button
                android:id="@+id/btSalvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salvar"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>